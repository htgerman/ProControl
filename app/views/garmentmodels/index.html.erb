<h1>Ready-Made Garment Models</h1>

<%= form_tag garmentmodels_path, :method => :get do %>
  <%= select_tag(:garmenttype_id, options_from_collection_for_select( @garmenttypes, :id, :name)) %>
  <%= submit_tag "Filter" %>
<% end %>

<% if @garmenttype %>
<h2>Garment Type: <%= @garmenttype.name %></h2>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Garment Type</th>
    <th></th>
    <th></th>
  </tr>

<% @garmentmodels.each do |garmentmodel| %>
  <tr>
    <td><span class='itemtitle'><%= link_to "#{garmentmodel.name}", garmentmodel %></span></td>    
    <td><%= garmentmodel.shortdescription %></td>
    <td>â‚¬ <%= garmentmodel.price %></td>
    <td><%= garmentmodel.garmenttype_name %></td>
    <td><%= link_to 'Edit', edit_garmentmodel_path(garmentmodel) %></td>
    <td><%= link_to 'Delete', garmentmodel, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

