<h2>New Note</h2>

<%= form_for [@noteable, Note.new], :html => {:multipart => true} do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>

  <div class="field">
    <%= f.label 'Upload File' %><br />
    <%= f.file_field :att %>
    <br /><br />
  </div>
   <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
