<h1>Notes</h1>

<table>
  <tr>
    <th>Title</th>       
    <th>Attachment</th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><span class='itemtitle'><%= link_to "#{note.title}", note %></span></td>
    <td>
    <%= link_to note.att.original_filename, note.att.url if note.att? %>
    </td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Delete', note, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Note', new_note_path %>
